<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp">

            <LinearLayout
                android:id="@+id/time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/tv_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_time"
                    android:padding="10dp"
                    android:text="@string/hour_example"
                    android:textSize="30sp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/dot"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tv_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_time"
                    android:padding="10dp"
                    android:text="@string/minute_example"
                    android:textSize="30sp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textStyle="bold" />

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imv_single"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                app:layout_constraintBottom_toBottomOf="@id/time_layout"
                app:layout_constraintRight_toLeftOf="@id/imv_group"
                app:layout_constraintTop_toTopOf="@id/time_layout" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imv_group"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/users_active"
                app:layout_constraintBottom_toBottomOf="@id/time_layout"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/time_layout" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_time"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/time_layout">

                <com.vteam.foodfriends.ui.custom_view.TimeTextView
                    android:id="@+id/tv_day_1"
                    android:text="1"
                    style="@style/TextViewDaySelection"/>

                <com.vteam.foodfriends.ui.custom_view.TimeTextView
                    android:id="@+id/tv_day_2"
                    android:text="2"
                    style="@style/TextViewDaySelection" />

                <com.vteam.foodfriends.ui.custom_view.TimeTextView
                    android:id="@+id/tv_day_3"
                    android:text="3"
                    style="@style/TextViewDaySelection"/>

                <com.vteam.foodfriends.ui.custom_view.TimeTextView
                    android:id="@+id/tv_day_4"
                    android:text="4"
                    style="@style/TextViewDaySelection"/>

                <com.vteam.foodfriends.ui.custom_view.TimeTextView
                    android:id="@+id/tv_day_5"
                    android:text="5"
                    style="@style/TextViewDaySelection" />

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/card_time"
        android:layout_marginTop="-5dp"
        android:layout_centerHorizontal="true"
        app:cardElevation="1dp"
        app:cardCornerRadius="10dp">

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_button_ok"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@string/ok"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>