<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_slider_screen1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/IntroTitleTextView"
            android:text="@string/intro_title_screen1" />

        <ImageView
            style="@style/IntroImageView"
            android:src="@drawable/intro1" />

        <TextView
            style="@style/IntroContentTextView"
            android:text="@string/intro_content_screen1" />
    </LinearLayout>
</RelativeLayout>